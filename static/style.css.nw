	font-weight: bold;
	font-style: italic;
	text-decoration:none;
	width:128px;
	}


#content {
	font-size: 120%;
	font-weight: normal;
	font-family: Helvetica, sans-serif;
	margin: 0;
	padding: 1px; 
	border-bottom: 1px solid silver;
}



#footer{
	text-align: center;
	position: relative;
	font-size: 90%;
}

#footer a{
	color: #028555;
}
#footer a.nostyle{
	color: white;
	text-decoration: none;
}
#footer p.small{
	color:grey;
}
